<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8">

            <include
                android:id="@+id/layout"
                layout="@layout/comman_toolbar" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/button_color_grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v4.widget.NestedScrollView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bg_screen"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1.5"
                                android:padding="10dp"
                                android:paddingLeft="15sp">

                                <com.mxi.ecommerce.widget.MyTextviewLight
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/add_address"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:textColor="@color/colorPrimary" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1.5">

                                    <android.support.design.widget.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:paddingLeft="25dp"
                                        android:paddingRight="25dp">

                                        <com.mxi.ecommerce.widget.MyEdittextLight

                                            android:id="@+id/et_first_name"
                                            android:textAppearance="?android:attr/textAppearanceMedium"                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="@string/hint_first_name"
                                            android:inputType="text"
                                            android:maxLines="1" />

                                    </android.support.design.widget.TextInputLayout>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1.5">

                                    <android.support.design.widget.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:paddingLeft="25dp"
                                        android:paddingRight="25dp">

                                        <com.mxi.ecommerce.widget.MyEdittextLight
                                            android:id="@+id/et_last_name"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="@string/hint_last_name"
                                            android:inputType="text"
                                            android:maxLines="1" />

                                    </android.support.design.widget.TextInputLayout>


                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1.5">

                                    <android.support.design.widget.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:paddingLeft="25dp"
                                        android:paddingRight="25dp">

                                        <com.mxi.ecommerce.widget.MyEdittextLight
                                            android:id="@+id/et_area"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="@string/area"
                                            android:inputType="text"
                                            android:maxLines="1" />

                                    </android.support.design.widget.TextInputLayout>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1.5">

                                    <android.support.design.widget.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:paddingLeft="25dp"
                                        android:paddingRight="25dp">

                                        <com.mxi.ecommerce.widget.MyEdittextLight

                                            android:id="@+id/et_way_number"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="@string/way_number"
                                            android:inputType="number"
                                            android:maxLines="1" />

                                    </android.support.design.widget.TextInputLayout>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1.5">

                                    <android.support.design.widget.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:paddingLeft="25dp"
                                        android:paddingRight="25dp">

                                        <com.mxi.ecommerce.widget.MyEdittextLight
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:id="@+id/et_building_number"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="@string/b_h_number"
                                            android:inputType="number"
                                            android:maxLines="1" />

                                    </android.support.design.widget.TextInputLayout>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1.5">

                                    <android.support.design.widget.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:paddingLeft="25dp"
                                        android:paddingRight="25dp">

                                        <com.mxi.ecommerce.widget.MyEdittextLight
                                            android:id="@+id/et_postal_code"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="@string/post_code"
                                            android:inputType="number"
                                            android:maxLines="1" />

                                    </android.support.design.widget.TextInputLayout>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1.5">

                                    <android.support.design.widget.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:paddingLeft="25dp"
                                        android:paddingRight="25dp">

                                        <com.mxi.ecommerce.widget.MyEdittextLight
                                            android:id="@+id/et_city"
                                            android:layout_width="match_parent"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:layout_height="wrap_content"
                                            android:hint="@string/city"
                                            android:inputType="textCapSentences"
                                            android:maxLines="1" />

                                    </android.support.design.widget.TextInputLayout>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:layout_marginTop="10dp"

                                    android:paddingLeft="25dp"
                                    android:paddingRight="25dp">

                                    <Spinner
                                        android:id="@+id/country_Name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:layout_marginTop="10dp"

                                    android:paddingLeft="25dp"
                                    android:paddingRight="25dp">

                                    <Spinner
                                        android:id="@+id/state_Name"
                                        android:layout_width="match_parent"

                                        android:layout_height="wrap_content"
                                        android:visibility="gone" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1.5">

                                    <android.support.design.widget.TextInputLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"

                                        android:paddingLeft="25dp"
                                        android:paddingRight="25dp">

                                        <com.mxi.ecommerce.widget.MyEdittextLight
                                            android:id="@+id/et_landmark"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="@string/landmark"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:inputType="textCapSentences"
                                            android:maxLines="1" />

                                    </android.support.design.widget.TextInputLayout>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.5">


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center">


                                    <com.mxi.ecommerce.widget.MyButtonLight

                                        android:id="@+id/btn_submit"
                                        android:layout_width="150dp"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:background="@drawable/btn_background"
                                        android:text="@string/submit"
                                        android:textColor="#ffffff"
                                        android:textSize="15sp" />


                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="15dp">

                            </LinearLayout>


                        </LinearLayout>

                    </FrameLayout>

                </android.support.v4.widget.NestedScrollView>


            </FrameLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
