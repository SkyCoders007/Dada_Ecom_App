<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:paddingLeft="20dp"
                    android:layout_width="match_parent"
                    android:src="@drawable/app_ic"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/ln_register_home"
                android:layout_width="match_parent"
                android:paddingRight="12sp"
                android:layout_height="match_parent">

              <com.mxi.ecommerce.widget.MyTextviewLight
                    android:layout_width="match_parent"
                    android:text="@string/home_name"
                    android:textAlignment="gravity"
                    android:gravity="center|right"
                    android:textSize="30sp"
                    android:paddingRight="20dp"
                    android:textColor="@color/grey_text"
                    android:layout_height="match_parent" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="0dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:src="@drawable/signup"
                    android:layout_height="55dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="7"
                android:padding="21sp"
                android:orientation="vertical"
                android:layout_height="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp">

                        <com.mxi.ecommerce.widget.MyEdittextLight
                            android:id="@+id/etRegFname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/hint_first_name"
                            android:inputType="textCapSentences"
                            android:maxLines="1" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent">


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp">

                        <com.mxi.ecommerce.widget.MyEdittextLight
                            android:id="@+id/etRegLname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/hint_last_name"
                            android:maxLines="1" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp">

                        <com.mxi.ecommerce.widget.MyEdittextLight
                            android:id="@+id/etRegMobilenumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/hint_mobile_number"
                            android:inputType="number"
                            android:maxLines="1" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent">


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp">

                        <com.mxi.ecommerce.widget.MyEdittextLight
                            android:id="@+id/etRegEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/hint_email"
                            android:inputType="text"
                            android:maxLines="1" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:paddingLeft="25dp"
                        app:passwordToggleEnabled="true"
                        android:paddingRight="25dp">

                        <com.mxi.ecommerce.widget.MyEdittextLight
                            android:id="@+id/etRegPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/hint_passwrod"
                            android:inputType="textPassword"
                            android:maxLines="1" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent">


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:paddingLeft="25dp"
                        app:passwordToggleEnabled="true"
                        android:paddingRight="25dp">

                        <com.mxi.ecommerce.widget.MyEdittextLight
                            android:id="@+id/etRegConfirmPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/hint_confirm_password"
                            android:inputType="textPassword"
                            android:maxLines="1" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout

                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp">

                    <LinearLayout
                        android:layout_weight="12"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:layout_gravity="center"
                            android:id="@+id/ch_term_condition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_marginTop="7dp"
                        android:layout_weight="1">



                        <LinearLayout
                            android:gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">


                            <LinearLayout
                                android:paddingTop="5sp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:layout_height="50dp">

                                <com.mxi.ecommerce.widget.MyTextviewLight
                                    android:textSize="17sp"
                                    android:layout_width="wrap_content"
                                    android:text="@string/i_have_read"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/grey_text"/>


                                <com.mxi.ecommerce.widget.MyTextviewLight
                                    android:textColor="#A9CEED"
                                    android:textSize="17sp"
                                    android:layout_width="wrap_content"
                                    android:text="@string/i_have_read2"
                                    android:layout_height="wrap_content" />

                                <com.mxi.ecommerce.widget.MyTextviewLight
                                    android:paddingLeft="5dp"
                                    android:textSize="17sp"
                                    android:layout_width="wrap_content"
                                    android:text="@string/i_have_read3"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/grey_text"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:layout_height="0dp">


                            </LinearLayout>

                        </LinearLayout>






                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <Button
                        android:id="@+id/btn_Registers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_background"
                        android:text="@string/register_btn_text"
                        android:textColor="@color/text_white"
                        android:textStyle="bold" />






                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:id="@+id/ln_register_gotologin"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <LinearLayout
                        android:paddingLeft="12sp"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                        <com.mxi.ecommerce.widget.MyTextviewLight
                            android:textSize="28sp"
                            android:layout_width="wrap_content"
                            android:text="@string/already_register"
                            android:layout_height="wrap_content"
                            android:textColor="@color/grey_text"/>


                        <com.mxi.ecommerce.widget.MyTextviewBold
                            android:textColor="#A7CDED"
                            android:textSize="28sp"
                            android:layout_width="wrap_content"
                            android:text="@string/signin"
                            android:paddingLeft="10dp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.1"
                        android:layout_height="match_parent">


                    </LinearLayout>

                </LinearLayout>




            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.2"
            android:layout_height="0dp"></LinearLayout>





    </LinearLayout>



</LinearLayout>

