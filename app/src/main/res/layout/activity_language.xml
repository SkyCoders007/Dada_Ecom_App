<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <include
                android:id="@+id/layout"
                layout="@layout/comman_toolbar" />


        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <com.mxi.ecommerce.widget.MyTextviewLight
                        android:id="@+id/tv_apply"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:gravity="center"
                        android:padding="12dp"
                        android:text="Apply"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent"
                        android:textSize="20sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/button_color_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="22dp"
                        android:layout_weight="1">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:paddingTop="2dp">

                                <com.mxi.ecommerce.widget.MyTextviewLight
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="15dp"
                                    android:text="@string/select_language"
                                    android:textColor="#000"
                                    android:textSize="15sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="4">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:id="@+id/aribic"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:paddingLeft="10dp"
                                        android:paddingTop="5dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="horizontal">

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_weight="4">

                                                <Button
                                                    android:layout_width="50dp"
                                                    android:layout_height="50dp"
                                                    android:layout_centerHorizontal="true"
                                                    android:layout_centerVertical="true"
                                                    android:background="@drawable/language_round_btn"
                                                    android:text="@string/ar"
                                                    android:textColor="#525262" />

                                                <com.mxi.ecommerce.widget.MyTextviewLight
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:paddingLeft="25dp"
                                                    android:text="عربى"
                                                    android:textColor="#000"
                                                    android:textSize="22dp" />


                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:gravity="right"
                                                android:paddingRight="15dp"
                                                android:paddingTop="5dp">


                                                <RadioButton
                                                    android:id="@+id/rb_arabic"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content" />


                                            </LinearLayout>


                                        </LinearLayout>


                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/english"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:paddingLeft="10dp"
                                        android:paddingTop="5dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="horizontal">

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_weight="4">

                                                <Button
                                                    android:layout_width="50dp"
                                                    android:layout_height="50dp"
                                                    android:layout_centerHorizontal="true"
                                                    android:layout_centerVertical="true"
                                                    android:background="@drawable/language_round_btn"
                                                    android:text="@string/en"
                                                    android:textColor="#525262" />

                                                <com.mxi.ecommerce.widget.MyTextviewLight
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:paddingLeft="25dp"
                                                    android:text="@string/english"
                                                    android:textColor="#000"
                                                    android:textSize="22dp" />


                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:gravity="right"
                                                android:paddingRight="15dp"

                                                android:paddingTop="5dp">


                                                <RadioButton
                                                    android:id="@+id/rb_english"
                                                    android:layout_width="wrap_content"

                                                    android:layout_height="wrap_content" />


                                            </LinearLayout>


                                        </LinearLayout>


                                    </LinearLayout>


                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/button_color_grey" />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </FrameLayout>
    </FrameLayout>

</LinearLayout>

