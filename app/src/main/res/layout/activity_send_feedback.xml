<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <include android:id="@+id/layout"
            layout="@layout/comman_toolbar"/>

    </LinearLayout>
    <View
        android:background="@color/button_color_grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">


                <com.mxi.ecommerce.widget.MyTextviewExtraBold

                    android:layout_width="wrap_content"
                    android:text="@string/name_f"
                    android:paddingTop="5dp"
                    android:layout_marginLeft="15sp"
                    android:paddingLeft="14dp"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:background="@drawable/sqaure_background_btn"
                android:layout_height="0dp">


                <com.mxi.ecommerce.widget.MyTextviewLight
                    android:id="@+id/et_name"
                    android:layout_width="wrap_content"
                    android:text="@string/name_f"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15sp"
                    android:paddingLeft="0dp"
                    android:textSize="15sp"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">


                <com.mxi.ecommerce.widget.MyTextviewExtraBold
                    android:layout_width="wrap_content"
                    android:text="@string/email_f"

                    android:paddingTop="5dp"
                    android:layout_marginLeft="15sp"
                    android:paddingLeft="14dp"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:background="@drawable/sqaure_background_btn"
                android:layout_height="0dp">


                <com.mxi.ecommerce.widget.MyTextviewLight
                    android:id="@+id/et_email"
                    android:layout_width="wrap_content"
                    android:text="@string/email_f"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15sp"
                    android:paddingLeft="0dp"
                    android:textSize="15sp"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="0.3"
                android:layout_height="0dp">


                <com.mxi.ecommerce.widget.MyTextviewExtraBold
                    android:layout_width="wrap_content"
                    android:text="@string/message_f"

                    android:paddingTop="8dp"
                    android:layout_marginLeft="15sp"
                    android:paddingLeft="14dp"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:background="@drawable/sqaure_background_btn"
                android:layout_height="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingTop="5sp"
                    android:layout_height="match_parent">

                    <com.mxi.ecommerce.widget.MyEdittextLight
                        android:id="@+id/et_send"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:lines="10"
                        android:minLines="5"
                        android:gravity="top|left"
                        android:maxLines="15" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">


            <LinearLayout
                android:layout_weight="0.3"
                android:layout_width="match_parent"
                android:layout_height="0dp">




            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:layout_width="match_parent"
                android:layout_height="0dp">



                <Button
                    android:id="@+id/btn_send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_background"
                    android:text="@string/send"
                    android:textColor="@color/text_white"
                    android:textStyle="bold" />

            </LinearLayout>



        </LinearLayout>





    </LinearLayout>


</LinearLayout>
