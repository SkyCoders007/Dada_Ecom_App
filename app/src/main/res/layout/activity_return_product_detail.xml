<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mxi.ecommerce.activity.ReturnProductDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8">

            <include
                android:id="@+id/layout"
                layout="@layout/comman_toolbar" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/button_color_grey" />

        <LinearLayout
            android:layout_weight="1"
            android:padding="12sp"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/return_step_one"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/button_color_grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bg_screen"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp">


                                <com.mxi.ecommerce.widget.MyTextviewSemibold
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:paddingLeft="15sp"
                                    android:text="@string/product_name"
                                    android:textAlignment="center" />

                                <com.mxi.ecommerce.widget.MyTextviewSemibold
                                    android:id="@+id/tv_product_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:paddingLeft="15sp"
                                    android:text="dvsdv" />


                            </LinearLayout>


                            <LinearLayout
                                android:weightSum="2.5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:gravity="center_vertical"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.5"
                                    android:weightSum="3"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp">

                                        <com.mxi.ecommerce.widget.MyTextviewSemibold
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="center"
                                            android:paddingLeft="15sp"
                                            android:text="@string/order_date_return"
                                            android:textAlignment="center" />

                                        <com.mxi.ecommerce.widget.MyTextviewSemibold
                                            android:id="@+id/tv_order_date"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="center"
                                            android:paddingLeft="1sp"
                                            android:text="26feb2018" />


                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp">


                                        <com.mxi.ecommerce.widget.MyTextviewSemibold
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="center"
                                            android:paddingLeft="15sp"
                                            android:text="@string/product_id"
                                            android:textAlignment="center" />

                                        <com.mxi.ecommerce.widget.MyTextviewSemibold

                                            android:id="@+id/tv_product_id"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:paddingLeft="15sp"
                                            android:text="" />


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp">


                                        <com.mxi.ecommerce.widget.MyTextviewSemibold
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="center"
                                            android:paddingLeft="15sp"
                                            android:text="@string/order_id2"
                                            android:textAlignment="center" />

                                        <com.mxi.ecommerce.widget.MyTextviewSemibold
                                            android:id="@+id/tv_order_id"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="center"
                                            android:paddingLeft="15sp"
                                            android:text="" />


                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout

                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="25sp"
                                    android:layout_marginRight="10sp"
                                    android:layout_weight="1">


                                    <ImageView
                                        android:id="@+id/img_product_img"
                                        android:layout_marginBottom="10dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="120dp"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/no_media" />


                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:background="@color/colorAccent"
                                android:layout_width="match_parent"
                                android:layout_height="50dp">

                                <com.mxi.ecommerce.widget.MyTextviewSemibold
                                    android:layout_width="match_parent"
                                    android:text="@string/customer_detail"
                                    android:textColor="@color/text_white"
                                    android:textAlignment="center"
                                    android:layout_gravity="center"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>


                            <LinearLayout
                                android:weightSum="0.5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">



                                    <LinearLayout
                                        android:paddingTop="15sp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <com.mxi.ecommerce.widget.MyTextviewSemibold
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="center"
                                            android:paddingLeft="15sp"
                                            android:text="@string/name"
                                            android:textAlignment="center" />

                                        <com.mxi.ecommerce.widget.MyTextviewSemibold
                                            android:id="@+id/tv_customer_name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="center"
                                            android:paddingLeft="15sp"
                                            android:text="" />


                                    </LinearLayout>


                                    <LinearLayout
                                        android:paddingTop="15sp"

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">


                                        <com.mxi.ecommerce.widget.MyTextviewSemibold
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="center"
                                            android:paddingLeft="15sp"
                                            android:text="@string/email"
                                            android:textAlignment="center" />

                                        <com.mxi.ecommerce.widget.MyTextviewSemibold

                                            android:id="@+id/tv_customer_email"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:paddingLeft="15sp"
                                            android:text="" />


                                    </LinearLayout>


                                    <LinearLayout
                                        android:paddingTop="15sp"

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">


                                        <com.mxi.ecommerce.widget.MyTextviewSemibold
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="center"
                                            android:paddingLeft="15sp"
                                            android:text="@string/mobile_no"
                                            android:textAlignment="center" />

                                        <com.mxi.ecommerce.widget.MyTextviewSemibold

                                            android:id="@+id/tv_mobile_number"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="center"
                                            android:paddingLeft="15sp"
                                            android:text="" />


                                    </LinearLayout>






                            </LinearLayout>





                        </LinearLayout>

                    </FrameLayout>

                </android.support.v4.widget.NestedScrollView>

            </FrameLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_weight="0.8"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:id="@+id/ln_reason_next_one"
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.mxi.ecommerce.widget.MyTextviewSemibold
                    android:layout_width="match_parent"
                    android:text="@string/next"
                    android:textColor="@color/text_white"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
