<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ln_myorder_product_iew_detail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:padding="15dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <com.mxi.ecommerce.widget.MyTextviewLight
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/order_id"
                            android:textColor="#000000"
                            android:textSize="15sp" />


                        <com.mxi.ecommerce.widget.MyTextviewLight
                            android:id="@+id/tv_order_id"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingLeft="8sp"
                            android:paddingTop="2sp"
                            android:text="#61"
                            android:textColor="@color/grey_text"
                            android:textSize="13sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <com.mxi.ecommerce.widget.MyTextviewLight
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/order_total"
                            android:textColor="#000000"
                            android:textSize="15sp" />


                        <com.mxi.ecommerce.widget.MyTextviewLight
                            android:id="@+id/order_total"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingLeft="8sp"
                            android:paddingTop="2sp"
                            android:text="11,999"
                            android:textColor="@color/grey_text"
                            android:textSize="13sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <com.mxi.ecommerce.widget.MyTextviewLight
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/data_added"
                            android:textColor="#000000"
                            android:textSize="15sp" />


                        <com.mxi.ecommerce.widget.MyTextviewLight
                            android:id="@+id/oder_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="8sp"
                            android:text="07/11/2017 03:15:58"
                            android:textColor="@color/grey_text"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <com.mxi.ecommerce.widget.MyTextviewLight
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/status"
                            android:textColor="#000000"
                            android:textSize="15sp" />


                        <com.mxi.ecommerce.widget.MyTextviewLight
                            android:id="@+id/oder_status"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingLeft="8sp"
                            android:text=""
                            android:textAlignment="center"
                            android:textColor="@color/grey_text"
                            android:textSize="13sp" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|top">


                    <ImageView
                        android:id="@+id/img_thumbnail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:padding="20dp"
                        android:src="@drawable/logo_1811" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15sp"
                android:background="#e1dfdf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/ln_vieworder"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/view" />

                        <com.mxi.ecommerce.widget.MyTextviewLight
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:paddingLeft="15sp"
                            android:text="@string/view"
                            android:textColor="@color/grey_text"
                            android:textSize="17sp" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e1dfdf"></View>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>