<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/button_color_grey" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="5">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:paddingLeft="10sp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="#199900">

                    <LinearLayout
                        android:layout_width="25dp"
                        android:layout_height="match_parent">

                        <com.mxi.ecommerce.widget.MyTextviewLight
                            android:id="@+id/tv_raw_review_rating"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingTop="0dp"
                            android:text="3.6"
                            android:textColor="@color/text_white" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="30dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            android:src="@mipmap/star"
                            android:textColor="@color/text_white" />

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.5">


                    <com.mxi.ecommerce.widget.MyTextviewLight
                        android:id="@+id/tv_raw_review_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:paddingLeft="10dp"
                        android:paddingTop="3dp"
                        android:text="Fabulous"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#000" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"

                android:paddingLeft="10sp"
                android:paddingTop="2dp">

                <com.mxi.ecommerce.widget.MyTextviewLight
                    android:id="@+id/tv_raw_review_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum dplar sit amet lorem ipsum."
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:orientation="horizontal"
                android:paddingLeft="10sp"
                android:paddingTop="2dp"
                android:weightSum="5">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center_vertical">

                    <com.mxi.ecommerce.widget.MyTextviewLight
                        android:id="@+id/tv_raw_review_name_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dhaval Kapdiya 2 oct 2017"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/grey_text" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_review_option"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="center|right"
                        android:src="@drawable/more"
                        android:tint="#000000" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>